# NanoClaw Environment Configuration
# Get your Telegram Chat ID from @userinfobot
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_ADMIN_CHAT_ID=YOUR_CHAT_ID_HERE

# Claude-compatible proxy configuration (backed by OpenRouter)
# Point ANTHROPIC_BASE_URL to your proxy host (no /v1 suffix)
ANTHROPIC_BASE_URL=http://localhost:3000
ANTHROPIC_API_KEY=YOUR_OPENROUTER_KEY_HERE

# OpenRouter (optional - only if used elsewhere)
OPENROUTER_API_KEY=YOUR_OPENROUTER_KEY_HERE
REASONING_MODEL=google/gemma-3-27b-it:free
COMPLETION_MODEL=google/gemma-3-27b-it:free
REQUIRE_FREE_MODELS=true
FALLBACK_MODELS=meta-llama/llama-3.3-70b-instruct:free,mistralai/mistral-small-3.1-24b-instruct:free

# Approval-gated action dispatch (disabled by default)
ENABLE_APPROVED_EXECUTION=false
# Orchestrator webhook target for approved actions
APPROVED_ACTION_WEBHOOK_URL=
# Optional HMAC secret for x-nanoclaw-signature header (sha256=<hex>)
APPROVED_ACTION_WEBHOOK_SECRET=
APPROVED_ACTION_WEBHOOK_TIMEOUT_MS=10000
# Keep local execution disabled in core app unless explicitly testing legacy paths
ENABLE_LOCAL_APPROVED_EXECUTION=false
# Optional comma-separated allowlist for web_fetch hostnames (e.g. github.com,docs.docker.com)
WEB_FETCH_ALLOWLIST=

# Legacy local SSH execution settings (unused unless local execution is re-enabled downstream)
EXEC_SSH_USER=aiops
EXEC_SSH_KEY_PATH=/home/adam/.ssh/nanoclaw_ops
EXEC_TARGET_WILLIAM_HOST=100.70.173.74
EXEC_TARGET_UBUNTU_HOST=100.108.37.10
EXEC_SSH_STRICT_HOST_KEY_CHECKING=accept-new

# Obsidian (for memory/context retrieval)
OBSIDIAN_VAULT_PATH=/path/to/obsidian/vault
# Comma-separated folders inside the vault to use for memory retrieval
OBSIDIAN_MEMORY_DIRS=Memory,Projects
OBSIDIAN_MEMORY_MAX_SNIPPETS=5
OBSIDIAN_MEMORY_MAX_CHARS=1200
OBSIDIAN_MEMORY_MAX_FILES=1500
OBSIDIAN_MEMORY_CACHE_MS=60000

# SSH Configuration for Unraid
UNRAID_HOST=192.168.12.153
UNRAID_USER=adam
UNRAID_KEY_PATH=/home/adam/.ssh/nanoclaw_unraid

# Claude Code OAuth (optional - if using Claude Code directly)
# CLAUDE_CODE_OAUTH_TOKEN=your_token_here
