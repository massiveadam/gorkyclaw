# OpenClaw Infrastructure Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Telegram Configuration
# ============================================================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_USER_IDS=12345678,87654321  # Comma-separated Telegram user IDs

# ============================================================================
# Security
# ============================================================================
OPS_RUNNER_SHARED_SECRET=generate_a_random_secret_here_min_32_chars

# ============================================================================
# Target Hosts (Tailscale IPs)
# ============================================================================
TARGET_WILLIAM_IP=100.70.173.74
TARGET_UBUNTU_IP=100.108.37.10

# ============================================================================
# Obsidian Vault Path
# Path to the Syncthing-local copy of your vault on willy-ubuntu
# ============================================================================
OBSIDIAN_VAULT_PATH=/home/user/Obsidian/Vault

# ============================================================================
# SSH Configuration
# ============================================================================
SSH_USER=aiops
SSH_STRICT_HOST_KEY_CHECKING=accept-new
WEB_FETCH_ALLOWLIST=

# ============================================================================
# NanoClaw Integration
# ============================================================================
NANOCALW_URL=http://nanoclaw:3000
